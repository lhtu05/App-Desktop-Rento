<UserControl x:Class="main.Views.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Đăng nhập" 
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- UserName -->
        <Label Grid.Row="1" Grid.Column="0" Content="Tên đăng nhập:" Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="txtUsername" Margin="0,0,0,10" Height="25"/>

        <!-- Password -->
        <Label Grid.Row="2" Grid.Column="0" Content="Mật khẩu:" Margin="0,0,10,10"/>
        <PasswordBox Grid.Row="2" Grid.Column="1" Name="txtPassword" Margin="0,0,0,10" Height="25"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Đăng nhập" Name="btnLogin" Width="100" Height="30" 
                    Margin="0,0,10,0" Click="BtnLogin_Click"/>
            <Button Content="Đăng ký" Name="btnRegister" Width="100" Height="30" 
                    Click="BtnRegister_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
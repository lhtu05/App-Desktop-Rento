<UserControl x:Class="main.Views.HostRoomDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#F5F5F5"> <!--Padding="20"-->
            <!-- Header -->
            <Border Background="#2E86AB" Height="70" CornerRadius="10" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="White" Margin="20,0,0,0"
                                Click="BackButton_Click">
                            <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                        </Button>
                        <TextBlock x:Name="txtTitle" Text="Chi tiết phòng" 
                                  Foreground="White" FontSize="24" FontWeight="Bold" 
                                  VerticalAlignment="Center" Margin="20,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                        <Button Content="Chỉnh sửa" 
                                Background="#FFC107" Foreground="#333"
                                Padding="15,8" Margin="0,0,10,0"
                                FontSize="14" FontWeight="SemiBold"
                                Click="EditButton_Click"
                                x:Name="btnEdit"/>
                        <Button Content="Xóa phòng" 
                                Background="#F44336" Foreground="White"
                                Padding="15,8" 
                                FontSize="14" FontWeight="SemiBold"
                                Click="DeleteButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Room Details -->
                <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="30">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Room Info -->
                            <StackPanel Margin="0,0,0,30">
                                <TextBlock Text="Thông tin phòng" FontSize="18" FontWeight="Bold" 
                                          Foreground="#2E86AB" Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên phòng:" 
                                              FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtDetailRoomName" 
                                              Margin="0,0,0,10"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Địa chỉ:" 
                                              FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtDetailAddress" 
                                              Margin="0,0,0,10" TextWrapping="Wrap"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Giá thuê:" 
                                              FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtDetailPrice" 
                                              Foreground="#2E86AB" FontWeight="SemiBold" 
                                              Margin="0,0,0,10"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Diện tích:" 
                                              FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtDetailArea" 
                                              Margin="0,0,0,10"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Trạng thái:" 
                                              FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <Border Grid.Row="4" Grid.Column="1" x:Name="borderStatus" 
                                            CornerRadius="15" Padding="10,5" Margin="0,0,0,10">
                                        <TextBlock x:Name="txtDetailStatus" 
                                                  HorizontalAlignment="Center" 
                                                  FontWeight="SemiBold" Foreground="White"/>
                                    </Border>
                                </Grid>
                            </StackPanel>

                            <!-- Amenities -->
                            <StackPanel Margin="0,0,0,30">
                                <TextBlock Text="Tiện ích" FontSize="18" FontWeight="Bold" 
                                          Foreground="#2E86AB" Margin="0,0,0,15"/>
                                <WrapPanel x:Name="wrapAmenities"/>
                            </StackPanel>

                            <!-- Description -->
                            <StackPanel Margin="0,0,0,30">
                                <TextBlock Text="Mô tả chi tiết" FontSize="18" FontWeight="Bold" 
                                          Foreground="#2E86AB" Margin="0,0,0,15"/>
                                <TextBlock x:Name="txtDetailDescription" TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Images Preview -->
                            <StackPanel>
                                <TextBlock Text="Hình ảnh" FontSize="18" FontWeight="Bold" 
                                          Foreground="#2E86AB" Margin="0,0,0,15"/>
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                              VerticalScrollBarVisibility="Disabled"
                                              Height="150">
                                    <StackPanel x:Name="imagePanel" Orientation="Horizontal"/>
                                </ScrollViewer>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Booking Panel -->
                <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Đặt phòng" FontSize="18" FontWeight="Bold" 
                                  Foreground="#2E86AB" Margin="0,0,0,20"/>

                        <!-- Contact Info -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Thông tin liên hệ" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="txtContactName" Text="Nguyễn Văn A" 
                                      FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtContactPhone" Text="0909 123 456" 
                                      Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtContactEmail" Text="nguyenvana@gmail.com" 
                                      Margin="0,0,0,10"/>
                        </StackPanel>

                        <!-- Booking Form -->
                        <StackPanel>
                            <TextBlock Text="Đặt lịch xem phòng" FontWeight="SemiBold" Margin="0,0,0,10"/>

                            <TextBlock Text="Ngày xem" Margin="0,0,0,5"/>
                            <DatePicker x:Name="dpViewDate" Margin="0,0,0,10"/>

                            <TextBlock Text="Giờ xem" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbViewTime" SelectedIndex="0" Margin="0,0,0,20">
                                <ComboBoxItem Content="08:00 - 10:00"/>
                                <ComboBoxItem Content="10:00 - 12:00"/>
                                <ComboBoxItem Content="13:00 - 15:00"/>
                                <ComboBoxItem Content="15:00 - 17:00"/>
                            </ComboBox>

                            <Button Content="Đặt lịch ngay" 
                                    Background="#2E86AB" Foreground="White"
                                    FontSize="14" FontWeight="SemiBold" Padding="15"
                                    Click="BookButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
<UserControl x:Class="main.Views.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <!-- Header -->
            <Border Background="#2E86AB" Height="70" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1420"/>
                        <ColumnDefinition Width="235"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Rento" Padding="20"
                              Foreground="White" FontSize="36" FontWeight="Bold" 
                              VerticalAlignment="Center"/>

                    <Button
                        Grid.Column="1" Height="40"
                        Click="NavigateToHostRegisterPage"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Style="{StaticResource MaterialDesignFlatLightButton}"
                        ToolTip="MaterialDesignFlatLightButton">
                        <TextBlock Text="Đăng phòng trọ của bạn" Foreground="White"
                                   FontSize="18" FontWeight="Medium"/>
                    </Button>

                    <Button
                        Grid.Column="2" HorizontalAlignment="Center" Height="40"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        ToolTip="MaterialDesignRaisedButton with Round Corners"
                        Click="NavigateToRenterRegisterPage">
                        <TextBlock Text="Đăng ký" Foreground="White"
                                   FontSize="18" FontWeight="Medium"/>
                    </Button>

                    <Button
                        Grid.Column="3" HorizontalAlignment="Center" Height="40"
                        materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="0"
                        ToolTip="MaterialDesignRaisedButton with Round Corners"
                        Click="NavigateToLoginPage" Background="White">
                        <TextBlock Text="Đăng nhập" Foreground="#2E86AB"
                                   FontSize="18" FontWeight="Medium"/>
                    </Button>

                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Margin="0,70,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Hero Section -->
                <Border Grid.Row="0" Background="White" Padding="40,30">
                    <StackPanel>
                        <TextBlock Text="Tìm phòng thông minh" 
                                  FontSize="28" FontWeight="Bold" Foreground="#2E86AB" 
                                  TextWrapping="Wrap" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                        <!-- Search Bar -->
                        <Border Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1" 
                                CornerRadius="25" Padding="15" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Tìm theo tên khu vực, trường, tên nhà" 
                                          Foreground="#9E9E9E" VerticalAlignment="Center"/>
                                <Button Background="#2E86AB" BorderThickness="0" Padding="20,10" 
                                        Grid.ColumnSpan="2" Height="40" 
                                        Margin="1700,0,0,0">
                                    <TextBlock Text="Tìm kiếm" Foreground="White"
                                               FontSize="16" FontWeight="SemiBold"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Filter Section -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Thời gian:" FontWeight="SemiBold" 
                                      VerticalAlignment="Center" Margin="0,0,10,0"/>

                            <ComboBox Width="120" Margin="0,0,20,0" SelectedIndex="0">
                                <ComboBoxItem Content="Gia phòng"/>
                                <ComboBoxItem Content="Mới nhất"/>
                                <ComboBoxItem Content="Cũ nhất"/>
                            </ComboBox>

                            <TextBlock Text="Diện tích:" FontWeight="SemiBold" 
                                      VerticalAlignment="Center" Margin="0,0,10,0"/>

                            <ComboBox Width="120" Margin="0,0,20,0" SelectedIndex="0">
                                <ComboBoxItem Content="Tất cả"/>
                                <ComboBoxItem Content="Dưới 20m²"/>
                                <ComboBoxItem Content="20-30m²"/>
                                <ComboBoxItem Content="Trên 30m²"/>
                            </ComboBox>

                            <TextBlock Text="Loại phòng:" FontWeight="SemiBold" 
                                      VerticalAlignment="Center" Margin="0,0,10,0"/>

                            <ComboBox Width="120" Margin="0,0,20,0" SelectedIndex="0">
                                <ComboBoxItem Content="Tất cả"/>
                                <ComboBoxItem Content="Phòng trọ"/>
                                <ComboBoxItem Content="Chung cư mini"/>
                                <ComboBoxItem Content="Nhà nguyên căn"/>
                            </ComboBox>

                            <Button x:Name="HN_btn"
                                    Content="Hà Nội"
                                    Click="HNButton_Click">

                            </Button>

                            <Button x:Name="TPHCM_btn"
                                     Content="TP HCM"
                                     Click="TPHCMButton_Click"
                                    Margin="20 0 0 0">

                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Bài đăng Section -->
                <Border Grid.Row="1" Background="White" Padding="30">
                    <StackPanel>
                        <TextBlock Text="Bài đăng" FontSize="20" FontWeight="Bold" 
                                  Foreground="#2E86AB" Margin="0,0,0,20"/>

                        <!-- Horizontal Scroll for Property Cards -->
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
                                      Height="200">
                            <StackPanel Orientation="Horizontal">
                                <!-- Property Card 1 -->
                                <Border Width="280" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                                        BorderThickness="1" CornerRadius="10" Margin="0,0,15,0">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="SMI House Võ Văn Ngân - Thủ Đức" 
                                                  FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,0,0,5"/>
                                        <TextBlock Text="Chỉ còn 2 phòng trống" 
                                                  Foreground="#FF6B6B" FontSize="12" Margin="0,0,0,10"/>
                                        <TextBlock Text="5.300.000đ" FontSize="16" FontWeight="Bold" 
                                                  Foreground="#2E86AB"/>
                                    </StackPanel>
                                </Border>

                                <!-- Property Card 2 -->
                                <Border Width="280" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                                        BorderThickness="1" CornerRadius="10" Margin="0,0,15,0">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="Air Apartment Trường Sơn - Quận 10" 
                                                  FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,0,0,5"/>
                                        <TextBlock Text="Chỉ còn 1 phòng trống" 
                                                  Foreground="#FF6B6B" FontSize="12" Margin="0,0,0,10"/>
                                        <TextBlock Text="6.500.000đ" FontSize="16" FontWeight="Bold" 
                                                  Foreground="#2E86AB"/>
                                    </StackPanel>
                                </Border>

                                <!-- Property Card 3 -->
                                <Border Width="280" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                                        BorderThickness="1" CornerRadius="10" Margin="0,0,15,0">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="New House Tân Sơn - Gò Vấp" 
                                                  FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,0,0,5"/>
                                        <TextBlock Text="Chỉ còn 1 phòng trống" 
                                                  Foreground="#FF6B6B" FontSize="12" Margin="0,0,0,10"/>
                                        <TextBlock Text="4.200.000đ" FontSize="16" FontWeight="Bold" 
                                                  Foreground="#2E86AB"/>
                                    </StackPanel>
                                </Border>

                                <!-- Property Card 4 -->
                                <Border Width="280" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                                        BorderThickness="1" CornerRadius="10" Margin="0,0,15,0">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="NT House Đường 6/39 - Gò Vấp" 
                                                  FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,0,0,5"/>
                                        <TextBlock Text="Chỉ còn 1 phòng trống" 
                                                  Foreground="#FF6B6B" FontSize="12" Margin="0,0,0,10"/>
                                        <TextBlock Text="3.600.000đ" FontSize="16" FontWeight="Bold" 
                                                  Foreground="#2E86AB"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Tòa nhà có phòng bán chạy Section -->
                <Border Grid.Row="2" Background="White" Padding="30">
                    <StackPanel>
                        <TextBlock Text="Tòa nhà có phòng bán chạy" FontSize="20" FontWeight="Bold" 
                                  Foreground="#2E86AB" Margin="0,0,0,20"/>

                        <!-- Popular Buildings List -->
                        <StackPanel>
                            <!-- Building 1 -->
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="SMI House Võ Văn Ngân - Thủ Đức" 
                                                  FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBlock Text="Chỉ còn 2 phòng trống" 
                                                  Foreground="#FF6B6B" FontSize="12"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="5.300.000đ" 
                                              FontSize="16" FontWeight="Bold" Foreground="#2E86AB"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Building 2 -->
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Air Apartment Trường Sơn - Quận 10" 
                                                  FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBlock Text="Chỉ còn 1 phòng trống" 
                                                  Foreground="#FF6B6B" FontSize="12"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="6.500.000đ" 
                                              FontSize="16" FontWeight="Bold" Foreground="#2E86AB"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Building 3 -->
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="New House Tân Sơn - Gò Vấp" 
                                                  FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBlock Text="Chỉ còn 1 phòng trống" 
                                                  Foreground="#FF6B6B" FontSize="12"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="4.200.000đ" 
                                              FontSize="16" FontWeight="Bold" Foreground="#2E86AB"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Building 4 -->
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="NT House Đường 6/39 - Gò Vấp" 
                                                  FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBlock Text="Chỉ còn 1 phòng trống" 
                                                  Foreground="#FF6B6B" FontSize="12"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="3.600.000đ" 
                                              FontSize="16" FontWeight="Bold" Foreground="#2E86AB"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
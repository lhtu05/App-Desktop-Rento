<UserControl x:Class="main.Views.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <!-- Header -->
            <Border Background="#2E86AB" Height="70" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1420"/>
                        <ColumnDefinition Width="235"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Rento" Padding="20"
                              Foreground="White" FontSize="36" FontWeight="Bold" 
                              VerticalAlignment="Center"/>

                    <Button
                        Grid.Column="1" Height="40"
                        Click="NavigateToHostRegisterPage"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Style="{StaticResource MaterialDesignFlatLightButton}"
                        ToolTip="MaterialDesignFlatLightButton">
                        <TextBlock Text="Đăng phòng trọ của bạn" Foreground="White"
                                   FontSize="18" FontWeight="Medium"/>
                    </Button>

                    <Button
                        Grid.Column="2" HorizontalAlignment="Center" Height="40"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        ToolTip="MaterialDesignRaisedButton with Round Corners"
                        Click="NavigateToRenterRegisterPage">
                        <TextBlock Text="Đăng ký" Foreground="White"
                                   FontSize="18" FontWeight="Medium"/>
                    </Button>

                    <Button
                        Grid.Column="3" HorizontalAlignment="Center" Height="40"
                        materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="0"
                        ToolTip="MaterialDesignRaisedButton with Round Corners"
                        Click="NavigateToLoginPage" Background="White">
                        <TextBlock Text="Đăng nhập" Foreground="#2E86AB"
                                   FontSize="18" FontWeight="Medium"/>
                    </Button>

                </Grid>
            </Border>

            <!-- Main Content -->
            <Border Margin="0,70,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="340"/>
                        <!-- Hero -->
                        <RowDefinition Height="*"/>
                        <!-- Content -->
                    </Grid.RowDefinitions>

                    <!-- HERO SECTION -->
                    <Grid Grid.Row="0">
                        <!-- Ảnh nền -->
                        <Image Source="Assets/hero.png"
                            Stretch="UniformToFill"/>
                        <!-- Overlay mờ -->
                        <Border Background="#80000000"/>
                        <!-- Nội dung trên ảnh -->
                        <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="700">

                            <TextBlock Text="Tìm phòng thông minh,"
                        FontSize="32"
                        Foreground="White"
                        FontWeight="Bold"
                        TextAlignment="Center"/>

                            <TextBlock Text="chốn về cực xinh"
                        FontSize="32"
                        Foreground="#2ED1C3"
                        FontWeight="Bold"
                        TextAlignment="Center"
                        Margin="0,0,0,20"/>

                            <!-- Thanh tìm kiếm -->
                            <Border CornerRadius="16" Background="White" Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Height="40"
                                     VerticalContentAlignment="Center"
                                     FontSize="14"
                                     Text="Tìm theo khu vực, trường, tòa nhà"/>

                                    <Button Grid.Column="1"
                                     Content="🔍"
                                     Width="50"
                                     Margin="8,0,0,0"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>


                    <!-- Bài đăng Section -->
                    <StackPanel Grid.Row="1" Margin="40">
                        <DockPanel Margin="0,0,0,16">
                            <TextBlock Text="Tòa nhà có phòng bán chạy"
                               FontSize="22"
                               FontWeight="SemiBold"
                               DockPanel.Dock="Left"/>

                            <TextBlock Text="Xem tất cả >"
                               Foreground="#2ED1C3"
                               Cursor="Hand"
                               DockPanel.Dock="Right"/> 
                        </DockPanel>


                        <!-- Horizontal Scroll for Property Cards -->
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding Rooms}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="220"
                                        Margin="0,0,16,0"
                                        CornerRadius="12"
                                        Background="White"
                                        Padding="8">

                                            <StackPanel>
                                                <Image Source="{Binding Image}"
                                               Height="120"
                                               Stretch="UniformToFill"
                                               ClipToBounds="True"/>

                                                <TextBlock Text="{Binding Name}"
                                               FontWeight="SemiBold"
                                               Margin="0,8,0,0"/>

                                                <TextBlock Text="{Binding Address}"
                                               FontSize="12"
                                               Foreground="Gray"/>

                                                <TextBlock Text="{Binding Price}"
                                               Foreground="#2ED1C3"
                                               FontWeight="Bold"
                                               Margin="0,8,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                    <!-- Tòa nhà có phòng bán chạy Section -->
                    <Border Grid.Row="2" Background="White" Padding="30">
                        <StackPanel>
                            <TextBlock Text="Tòa nhà có phòng bán chạy" FontSize="20" FontWeight="Bold" 
                                  Foreground="#2E86AB" Margin="0,0,0,20"/>

                            <!-- Popular Buildings List -->
                            <StackPanel>
                                <!-- Building 1 -->
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="SMI House Võ Văn Ngân - Thủ Đức" 
                                                  FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <TextBlock Text="Chỉ còn 2 phòng trống" 
                                                  Foreground="#FF6B6B" FontSize="12"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="5.300.000đ" 
                                              FontSize="16" FontWeight="Bold" Foreground="#2E86AB"
                                              VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Building 2 -->
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Air Apartment Trường Sơn - Quận 10" 
                                                  FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <TextBlock Text="Chỉ còn 1 phòng trống" 
                                                  Foreground="#FF6B6B" FontSize="12"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="6.500.000đ" 
                                              FontSize="16" FontWeight="Bold" Foreground="#2E86AB"
                                              VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Building 3 -->
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="New House Tân Sơn - Gò Vấp" 
                                                  FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <TextBlock Text="Chỉ còn 1 phòng trống" 
                                                  Foreground="#FF6B6B" FontSize="12"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="4.200.000đ" 
                                              FontSize="16" FontWeight="Bold" Foreground="#2E86AB"
                                              VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Building 4 -->
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="NT House Đường 6/39 - Gò Vấp" 
                                                  FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <TextBlock Text="Chỉ còn 1 phòng trống" 
                                                  Foreground="#FF6B6B" FontSize="12"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="3.600.000đ" 
                                              FontSize="16" FontWeight="Bold" Foreground="#2E86AB"
                                              VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
<UserControl x:Class="main.Views.HostMainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#F5F5F5">
            <!-- Header -->
            <Border Background="#2E86AB" Height="70" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="White" Margin="20,0,0,0"
                                Click="BackButton_Click">
                            <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                        </Button>
                        <TextBlock Text="Quản lý phòng trọ" 
                                  Foreground="White" FontSize="24" FontWeight="Bold" 
                                  VerticalAlignment="Center" Margin="20,0,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1" Content="Thêm phòng mới" 
                            Background="#A23B72" Foreground="White" 
                            BorderThickness="0" Padding="20,10" 
                            Margin="0,0,20,0" FontSize="14" FontWeight="SemiBold"
                            Click="AddNewRoom_Click"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Margin="0,70,0,0">
                <!-- Padding="20" -->

                <!-- Summary Cards -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                    <!-- Total Rooms Card -->
                    <Border Width="200" Background="White" CornerRadius="10" 
                            Padding="20" Margin="0,0,20,0">
                        <StackPanel>
                            <TextBlock Text="Tổng số phòng" FontSize="14" Foreground="#666"/>
                            <TextBlock Text="12" FontSize="32" FontWeight="Bold" 
                                        Foreground="#2E86AB" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Available Rooms Card -->
                    <Border Width="200" Background="White" CornerRadius="10" 
                            Padding="20" Margin="0,0,20,0">
                        <StackPanel>
                            <TextBlock Text="Phòng trống" FontSize="14" Foreground="#666"/>
                            <TextBlock Text="5" FontSize="32" FontWeight="Bold" 
                                        Foreground="#4CAF50" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Rented Rooms Card -->
                    <Border Width="200" Background="White" CornerRadius="10" 
                            Padding="20" Margin="0,0,20,0">
                        <StackPanel>
                            <TextBlock Text="Phòng đã thuê" FontSize="14" Foreground="#666"/>
                            <TextBlock Text="7" FontSize="32" FontWeight="Bold" 
                                        Foreground="#FF6B6B" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Room List -->
                <Border Background="White" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Danh sách phòng" FontSize="18" FontWeight="Bold" 
                                    Foreground="#2E86AB" Margin="0,0,0,20"/>

                        <!-- Search Bar -->
                        <Border Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1" 
                                CornerRadius="25" Padding="15" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="" 
                                            BorderThickness="0" Background="Transparent"
                                            Foreground="#333" FontSize="14"
                                            materialDesign:HintAssist.Hint="Tìm kiếm phòng..."/>
                                <Button Grid.Column="1" Content="Tìm" 
                                        Background="#2E86AB" Foreground="White"
                                        BorderThickness="0" Padding="20,8" 
                                        materialDesign:ButtonAssist.CornerRadius="15"/>
                            </Grid>
                        </Border>

                        <!-- Room List Table -->
                        <ListView x:Name="RoomListView" BorderThickness="0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Tên phòng" Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RoomName}" 
                                                            FontWeight="SemiBold"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Địa chỉ" Width="250">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Address}" 
                                                            TextWrapping="Wrap"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Giá" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Price, StringFormat='{}{0:N0}đ'}" 
                                                            Foreground="#2E86AB" FontWeight="SemiBold"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Trạng thái" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding StatusColor}" 
                                                        CornerRadius="15" Padding="5,2">
                                                    <TextBlock Text="{Binding Status}" 
                                                                HorizontalAlignment="Center" 
                                                                Foreground="White" FontSize="12"/>
                                                </Border>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Thao tác" Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="Xem" 
                                                            Background="#2E86AB" Foreground="White"
                                                            Padding="10,5" Margin="0,0,5,0"
                                                            Click="ViewRoom_Click"
                                                            Tag="{Binding RoomId}"/>
                                                    <Button Content="Sửa" 
                                                            Background="#FFC107" Foreground="#333"
                                                            Padding="10,5" Margin="0,0,5,0"
                                                            Click="EditRoom_Click"
                                                            Tag="{Binding RoomId}"/>
                                                    <Button Content="Xóa" 
                                                            Background="#F44336" Foreground="White"
                                                            Padding="10,5"
                                                            Click="DeleteRoom_Click"
                                                            Tag="{Binding RoomId}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="Padding" Value="10"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
<Window x:Class="main.Views.PostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Post Room" Height="600" Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tên phòng -->
            <RowDefinition Height="Auto"/>
            <!-- Thành phố + phường -->
            <RowDefinition Height="Auto"/>
            <!-- Địa chỉ -->
            <RowDefinition Height="Auto"/>
            <!-- Giá -->
            <RowDefinition Height="*"/>
            <!-- Mô tả -->
            <RowDefinition Height="Auto"/>
            <!-- Thêm ảnh -->
            <RowDefinition Height="Auto"/>
            <!-- Nút đăng phòng / hủy -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Tên phòng -->
        <TextBlock Text="Tên phòng:" Grid.Row="0" Grid.Column="0" Margin="0 4" VerticalAlignment="Center"/>
        <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Margin="0 4" TextChanged="txtName_TextChanged" />

        <!-- Thành phố + Phường -->
        <ComboBox x:Name="CityComboBox" SelectionChanged="CityComboBox_SelectionChanged" 
                  Grid.Row="1" Grid.Column="0" Width="140" Margin="0,4,0,4" 
                  Text="Thành phố"/>
        <ComboBox x:Name="WardComboBox"
                  Grid.Row="1" Grid.Column="1" Width="140" Margin="0,4,0,4" 
                  Text="Phường"/>

        <!-- Địa chỉ -->
        <TextBlock Text="Địa chỉ:" Grid.Row="2" Grid.Column="0" Margin="0 4" VerticalAlignment="Center"/>
        <TextBox x:Name="txtAddress" Grid.Row="2" Grid.Column="1" Margin="0 4" />

        <!-- Giá -->
        <TextBlock Text="Giá:" Grid.Row="3" Grid.Column="0" Margin="0 4" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0 4">
            <TextBox x:Name="txtPrice" Width="100"/>
            <TextBlock Text=" VND" Margin="8 0 0 0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Mô tả -->
        <GroupBox Header="Mô tả" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,4,0,4">
            <TextBox x:Name="txtDescription"
             AcceptsReturn="True"
             VerticalScrollBarVisibility="Auto"
             TextWrapping="Wrap"
             Height="160"
             Padding="6"/>
        </GroupBox>


        <!-- Thêm ảnh -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Vertical" Margin="0,8,0,8">
            <Button Content="Thêm ảnh" Width="120"/>
            <ListBox x:Name="ImageList" Height="150" Margin="0,4,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding}" Height="100"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- Nút đăng phòng / hủy -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Đăng phòng" Width="130" Margin="0 0 8 0" Click="btnPost_Click"/>
            <Button Content="Hủy" Width="100"/>
        </StackPanel>

    </Grid>
</Window>

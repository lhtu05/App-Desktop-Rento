<UserControl x:Class="main.Views.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:main.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Margin="10">

        <ComboBox x:Name="CityComboBox"
                  Width="200"
                  SelectionChanged="CityComboBox_SelectionChanged" />

        <ComboBox x:Name="WardComboBox"
                  Width="200"
                  Margin="0,5,0,5"
                  SelectionChanged="WardComboBox_SelectionChanged" />

        <ListView x:Name="PropertyListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <StackPanel Width="250">
                            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Address}"/>
                            <TextBlock Text="{Binding Price, StringFormat=C}"/>
                        </StackPanel>

                        <Button Content="Xem phòng"
                                Tag="{Binding ID}"
                                Click="ViewRoom_Click"
                                Width="150" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackPanel>
</UserControl>

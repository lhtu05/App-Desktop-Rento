<UserControl x:Class="main.Views.RoomDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:System="clr-namespace:System;assembly=mscorlib" Width="511">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#F5F5F5">
            <!-- Header -->
            <Border Background="#2E86AB" Height="70" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="White" Margin="20,0,0,0"
                                Click="BackButton_Click">
                            <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                        </Button>
                        <TextBlock x:Name="txtPropertyTitle" Text="Chi tiết phòng" 
                                  Foreground="White" FontSize="20" FontWeight="Bold" 
                                  VerticalAlignment="Center" Margin="20,0,0,0"
                                  TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                        <Button x:Name="btnFavorite" Content="Yêu thích" 
                                Background="White" Foreground="#2E86AB"
                                Padding="15,8" Margin="0,0,10,0"
                                FontSize="14" FontWeight="SemiBold"
                                Click="FavoriteButton_Click"/>
                        <Button x:Name="btnShare" Content="Chia sẻ" 
                                Background="White" Foreground="#2E86AB"
                                Padding="15,8" FontSize="14" FontWeight="SemiBold"
                                Click="ShareButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Margin="0,70,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Property Details -->
                <StackPanel Grid.Column="0">
                    <!-- Image Gallery -->
                    <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="300"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Main Image -->
                            <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="5">
                                <Image x:Name="imgMain" Stretch="UniformToFill"/>
                            </Border>

                            <!-- Thumbnail Images -->
                            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" 
                                          VerticalScrollBarVisibility="Disabled" Margin="0,10,0,0">
                                <StackPanel x:Name="thumbnailPanel" Orientation="Horizontal"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Property Info -->
                    <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Thông tin chi tiết" FontSize="18" FontWeight="Bold" 
                                      Foreground="#2E86AB" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Địa chỉ:" 
                                          FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtAddress" 
                                          Margin="0,0,0,10" TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Diện tích:" 
                                          FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtArea" 
                                          Margin="0,0,0,10"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Loại phòng:" 
                                          FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtRoomType" 
                                          Margin="0,0,0,10"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Sức chứa:" 
                                          FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtCapacity" 
                                          Margin="0,0,0,10"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Ngày đăng:" 
                                          FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtPostedDate" 
                                          Margin="0,0,0,10"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Amenities -->
                    <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Tiện ích" FontSize="18" FontWeight="Bold" 
                                      Foreground="#2E86AB" Margin="0,0,0,15"/>
                            <WrapPanel x:Name="wrapAmenities"/>
                        </StackPanel>
                    </Border>

                    <!-- Description -->
                    <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Mô tả" FontSize="18" FontWeight="Bold" 
                                      Foreground="#2E86AB" Margin="0,0,0,15"/>
                            <TextBlock x:Name="txtDescription" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Reviews -->
                    <Border Background="White" CornerRadius="10" Padding="20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="Đánh giá" FontSize="18" FontWeight="Bold" 
                                          Foreground="#2E86AB"/>
                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <materialDesign:PackIcon Kind="Star" Foreground="#FFC107" Width="20" Height="20"/>
                                    <TextBlock x:Name="txtRating" Text="4.5" FontSize="16" FontWeight="Bold" 
                                              Margin="5,0,10,0"/>
                                    <TextBlock x:Name="txtReviewCount" Text="(12 đánh giá)" Foreground="#666"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Reviews List -->
                            <StackPanel x:Name="reviewsPanel"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column - Booking Panel -->
                <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <!-- Price -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Giá thuê" FontSize="14" Foreground="#666"/>
                            <TextBlock x:Name="txtPrice" Text="5.300.000 đ/tháng" 
                                      FontSize="24" FontWeight="Bold" 
                                      Foreground="#FF6B6B" Margin="0,5,0,0"/>
                            <TextBlock Text="Tiền cọc: 10.000.000 đ" FontSize="14" Foreground="#666"/>
                        </StackPanel>

                        <!-- Contact Info -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Thông tin liên hệ" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Border Width="50" Height="50" CornerRadius="25" Background="#E3F2FD">
                                    <TextBlock Text="C" FontSize="18" FontWeight="Bold" 
                                              Foreground="#2E86AB" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="10,0,0,0">
                                    <TextBlock x:Name="txtHostName" Text="Chủ nhà: Nguyễn Văn A" 
                                              FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <materialDesign:PackIcon Kind="Phone" Width="16" Height="16" Foreground="#666"/>
                                        <TextBlock x:Name="txtHostPhone" Text="0909 123 456" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Booking Form -->
                        <StackPanel>
                            <TextBlock Text="Đặt lịch xem phòng" FontWeight="SemiBold" Margin="0,0,0,15"/>

                            <TextBlock Text="Ngày xem*" Margin="0,0,0,5"/>
                            <DatePicker x:Name="dpViewDate" Margin="0,0,0,10" SelectedDate="{x:Static System:DateTime.Today}"/>

                            <TextBlock Text="Giờ xem*" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbViewTime" SelectedIndex="0" Margin="0,0,0,15">
                                <ComboBoxItem Content="Sáng (8:00 - 12:00)"/>
                                <ComboBoxItem Content="Chiều (13:00 - 17:00)"/>
                                <ComboBoxItem Content="Tối (18:00 - 21:00)"/>
                            </ComboBox>

                            <TextBlock Text="Ghi chú cho chủ nhà" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtNote" 
                                     AcceptsReturn="True" TextWrapping="Wrap"
                                     Height="60" FontSize="14" Padding="10" 
                                     BorderBrush="#E0E0E0" BorderThickness="1"
                                     VerticalScrollBarVisibility="Auto"
                                     materialDesign:HintAssist.Hint="Ví dụ: Tôi muốn xem phòng vào cuối tuần..."
                                     Margin="0,0,0,20"/>

                            <Button Content="Đặt lịch xem ngay" 
                                    Background="#2E86AB" Foreground="White"
                                    FontSize="16" FontWeight="SemiBold" Padding="20,12"
                                    HorizontalAlignment="Stretch"
                                    Click="BookButton_Click"/>

                            <Button Content="Gọi ngay cho chủ nhà" 
                                    Background="#4CAF50" Foreground="White"
                                    FontSize="14" FontWeight="SemiBold" Padding="15,8"
                                    HorizontalAlignment="Stretch" Margin="0,10,0,0"
                                    Click="CallButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
<UserControl x:Class="main.Views.RenterRoomDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:main.Views"
        mc:Ignorable="d"
        Height="450" Width="800">
    <StackPanel Margin="20">

        <TextBlock Text="Thông tin phòng" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20" />

        <TextBlock x:Name="TitleText"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10" />

        <TextBlock x:Name="AddressText"
                   FontSize="14"
                   Margin="0,0,0,10" />

        <TextBlock x:Name="PriceText"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="DarkGreen"
                   Margin="0,0,0,10" />

        <Button Content="Đặt phòng"
                Width="150"
                Height="40"
                Click="Book_Click"
                Margin="0,20,0,0"
                Background="#3498db"
                Foreground="White" />
    </StackPanel>
</UserControl>

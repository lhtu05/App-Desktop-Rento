<UserControl x:Class="main.Views.PostPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#F5F5F5" Padding="20">
            <!-- Header -->
            <Border Background="#2E86AB" Height="70" CornerRadius="10" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="White" Margin="20,0,0,0"
                                Click="BackButton_Click">
                            <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                        </Button>
                        <TextBlock Text="Đăng phòng mới" 
                                  Foreground="White" FontSize="24" FontWeight="Bold" 
                                  VerticalAlignment="Center" Margin="20,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Form Content -->
            <Border Background="White" CornerRadius="10" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Room Name -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Tên phòng*" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtTitle" 
                                 materialDesign:HintAssist.Hint="Ví dụ: Phòng 101 - SMI House"
                                 FontSize="14" Padding="10" 
                                 BorderBrush="#E0E0E0" BorderThickness="1"/>
                    </StackPanel>

                    <!-- Address -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock Text="Địa chỉ*" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtAddress" 
                                 materialDesign:HintAssist.Hint="Số nhà, đường, phường, quận, thành phố"
                                 FontSize="14" Padding="10" 
                                 BorderBrush="#E0E0E0" BorderThickness="1"/>
                    </StackPanel>

                    <!-- Price and Area -->
                    <Grid Grid.Row="2" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Price -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Giá thuê/tháng*" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtPrice" 
                                     materialDesign:HintAssist.Hint="Ví dụ: 5.000.000"
                                     FontSize="14" Padding="10" 
                                     BorderBrush="#E0E0E0" BorderThickness="1"/>
                        </StackPanel>

                        <!-- Area -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Diện tích (m²)*" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtArea" 
                                     materialDesign:HintAssist.Hint="Ví dụ: 30"
                                     FontSize="14" Padding="10" 
                                     BorderBrush="#E0E0E0" BorderThickness="1"/>
                        </StackPanel>
                    </Grid>

                    <!-- Room Type and Capacity -->
                    <Grid Grid.Row="3" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Room Type -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Loại phòng*" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbRoomType" SelectedIndex="0">
                                <ComboBoxItem Content="Phòng trọ"/>
                                <ComboBoxItem Content="Chung cư mini"/>
                                <ComboBoxItem Content="Nhà nguyên căn"/>
                                <ComboBoxItem Content="Căn hộ dịch vụ"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Capacity -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Sức chứa (người)*" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbCapacity" SelectedIndex="0">
                                <ComboBoxItem Content="1 người"/>
                                <ComboBoxItem Content="2 người"/>
                                <ComboBoxItem Content="3 người"/>
                                <ComboBoxItem Content="4 người"/>
                                <ComboBoxItem Content="Trên 4 người"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Amenities -->
                    <StackPanel Grid.Row="4" Margin="0,0,0,20">
                        <TextBlock Text="Tiện ích" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <WrapPanel>
                            <CheckBox x:Name="chkWifi" Content="WiFi" Margin="0,0,20,10"/>
                            <CheckBox x:Name="chkParking" Content="Chỗ để xe" Margin="0,0,20,10"/>
                            <CheckBox x:Name="chkAirCon" Content="Máy lạnh" Margin="0,0,20,10"/>
                            <CheckBox x:Name="chkWaterHeater" Content="Nóng lạnh" Margin="0,0,20,10"/>
                            <CheckBox x:Name="chkFridge" Content="Tủ lạnh" Margin="0,0,20,10"/>
                            <CheckBox x:Name="chkWashing" Content="Máy giặt" Margin="0,0,20,10"/>
                            <CheckBox x:Name="chkKitchen" Content="Bếp" Margin="0,0,20,10"/>
                            <CheckBox x:Name="chkSecurity" Content="Bảo vệ 24/7" Margin="0,0,20,10"/>
                        </WrapPanel>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Grid.Row="5" Margin="0,0,0,20">
                        <TextBlock Text="Mô tả chi tiết" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtDescription" 
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 Height="100" FontSize="14" Padding="10" 
                                 BorderBrush="#E0E0E0" BorderThickness="1"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- Images -->
                    <StackPanel Grid.Row="6" Margin="0,0,0,30">
                        <TextBlock Text="Hình ảnh phòng" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Border BorderBrush="#E0E0E0" BorderThickness="2" 
                                BorderThickness="2" CornerRadius="5" 
                                Background="#F8F9FA" Padding="20">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Button Content="Chọn hình ảnh" 
                                        Background="#2E86AB" Foreground="White"
                                        Padding="20,10" FontSize="14"
                                        Click="SelectImages_Click"/>
                                <TextBlock Text="Tối đa 10 hình, mỗi hình ≤ 5MB" 
                                          Foreground="#666" FontSize="12" 
                                          Margin="0,10,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Hủy" Width="120" Height="40"
                                Background="#9E9E9E" Foreground="White" FontSize="14"
                                Margin="0,0,20,0" Click="CancelButton_Click"/>
                        <Button Content="Đăng phòng" Width="120" Height="40"
                                Background="#2E86AB" Foreground="White" FontSize="14" FontWeight="SemiBold"
                                Click="PostRoom_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
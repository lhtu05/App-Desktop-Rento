<UserControl x:Class="main.Views.HostRegisterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="450" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Đăng ký tài khoản" 
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Back Button -->
        <Button Grid.Row="0" Grid.Column="0" Content="← Quay lại" 
                Click="BtnBack_Click" HorizontalAlignment="Left" Width="80" Height="25"/>

        <!-- Full Name -->
        <Label Grid.Row="1" Grid.Column="0" Content="Họ và tên:" Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="txtFullName" Margin="0,0,0,10" Height="25"/>

        <!-- UserName -->
        <Label Grid.Row="2" Grid.Column="0" Content="Tên đăng nhập:" Margin="0,0,10,10"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="txtUsername" Margin="0,0,0,10" Height="25"/>

        <!-- Email -->
        <Label Grid.Row="3" Grid.Column="0" Content="Email:" Margin="0,0,10,10"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="txtEmail" Margin="0,0,0,10" Height="25"/>

        <!-- PhoneNumber -->
        <Label Grid.Row="4" Grid.Column="0" Content="Số điện thoại:" Margin="0,0,10,10"/>
        <TextBox Grid.Row="4" Grid.Column="1" Name="txtPhone" Margin="0,0,0,10" Height="25"/>

        <!-- Password -->
        <Label Grid.Row="5" Grid.Column="0" Content="Mật khẩu:" Margin="0,0,10,10"/>
        <PasswordBox Grid.Row="5" Grid.Column="1" Name="txtPassword" Margin="0,0,0,10" Height="25"/>

        <!-- Confirm Password -->
        <Label Grid.Row="6" Grid.Column="0" Content="Xác nhận mật khẩu:" Margin="0,0,10,10"/>
        <PasswordBox Grid.Row="6" Grid.Column="1" Name="txtConfirmPassword" Margin="0,0,0,10" Height="25"/>

        <!-- Renter Type -->
        <Label Grid.Row="7" Grid.Column="0" Content="Loại tài khoản:" Margin="0,0,10,10"/>
        <ComboBox Grid.Row="7" Grid.Column="1" Name="cmbUserType" Margin="0,0,0,10" Height="25">
            <ComboBoxItem Content="Người thuê (Renter)" IsSelected="True"/>
            <ComboBoxItem Content="Chủ nhà (Host)"/>
        </ComboBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Đăng ký" Name="btnRegister" Width="100" Height="30" 
                    Margin="0,0,10,0" Click="BtnRegister_Click"/>
            <Button Content="Hủy" Name="btnCancel" Width="100" Height="30" 
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</UserControl>